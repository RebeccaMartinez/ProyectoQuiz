<div class="col-md-5 col-md-offset-1">
	<img src="images/bienvenido.gif" id="img_princi"/>
</div>
<div class="col-md-4 col-md-offset-2">
<h2 id="h2-registro">Registro</h2>
<% if(errors === "El usuario ya existe") { %>
	<span class='ErrorMsgs'>* El usuario ya existe!</span>
	<br><br>
<%} else { %>
	<% if(errors["username"]) { %>
	    <span class='ErrorMsgs'><%= errors["username"] %></span><br>
	<% } %>
	<br>
	<% if(errors["password"]) { %>
	    <span class='ErrorMsgs'><%= errors["password"] %></span><br><br>
	<% } %>
<% } %>
<form method='POST' action='/signin'>
	<div class="field">
		<lablel for="login">Login: </label><br />
		<input type="text" class="form-control" id="login" name="user[username]" size="30" />
	</div>
  <br>
	<div class="field">
		<lablel for="password">Password: </label><br />
		<input type="password" class="form-control" id="password" name="user[password]" size="30" />
	</div>
	<div class="actions">
    <button type="submit" class="btn btn-primary" name="button" id="btn_registro">Registrarse</button>
	</div>
</form>
</div>
